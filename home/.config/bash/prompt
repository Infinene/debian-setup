__prompt_command() {
  local exit="$?"                # This needs to be first

  PS1="\[\e[34m\]\u@\h:\[\e[m\] \[\e[32m\]\w\[\e[m\]\n"

  if [ $exit != 0 ]; then
    PS1+="\[\e[31m\]$exit\[\e[m\] "        # Add if exit code non 0
  fi

  PS1+="\[\e[1;30m\]\t\[\e[m\] ‚ù± "
}

PROMPT_COMMAND=__prompt_command
