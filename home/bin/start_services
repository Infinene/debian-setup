#!/usr/bin/bash

if [[ $EUID > 0 ]]; then
  SUDO=sudo
fi

function start()
{
  ${SUDO} service $1 status > /dev/null
  if [ $? != 0 ]
  then
    echo "- starting $1 ..."
    ${SUDO} service $1 start;
  else
    echo "- $1 is already running";
  fi;
}

start mailhog
start mariadb
start php8.0-fpm
start nginx

sudo service --status-all
