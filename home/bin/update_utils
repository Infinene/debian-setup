#!/bin/bash

if [ "$(whoami)" != "root" ]; then
  SUDO=sudo
fi

this_dir=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

# If sudo, get the password now
${SUDO} echo

# source $this_dir/src/update_nnn.sh
source $this_dir/src/update_micro.sh
source $this_dir/src/update_lf.sh
source $this_dir/src/update_fd.sh
source $this_dir/src/update_bat.sh
source $this_dir/src/update_ripgrep.sh
source $this_dir/src/update_lego.sh
source $this_dir/src/update_composer.sh
