#!/usr/bin/bash
set -x

if [ "$(whoami)" != "root" ]; then
  SUDO=sudo
fi

if ! command -v jq &> /dev/null
then
  echo 'Installing jq ...'
  ${SUDO} apt -y install jq
fi

this_dir=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
arch=$(dpkg --print-architecture)

# If sudo, get the password now
${SUDO} echo

# source $this_dir/src/update_nnn.sh
. $this_dir/src/update_micro.sh
. $this_dir/src/update_lf.sh
. $this_dir/src/update_fd.sh
. $this_dir/src/update_bat.sh
. $this_dir/src/update_ripgrep.sh
. $this_dir/src/update_lego.sh
. $this_dir/src/update_composer.sh
