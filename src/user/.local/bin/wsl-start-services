#!/bin/bash

if [[ $EUID > 0 ]]; then
	SUDO=sudo
fi

function start()
{
	${SUDO} service $1 status > /dev/null
	if [ $? != 0 ]; then
		printf '%s\n' "- starting $1 ..."
		${SUDO} service $1 start;
	else
		printf '%s\n' "- $1 is already running";
	fi;
}

start mailhog
start mariadb
start php8.2-fpm
start nginx
# start ssh

sudo service --status-all
